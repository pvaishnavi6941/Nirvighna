<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".selection">

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="Waste Collection"
        android:textColor="#174219"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="What type of waste would you be interested in collecting?"
        android:textColor="#174219"
        android:textSize="20dp"
        android:textStyle="normal" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/button1"
        android:layout_below="@id/text5"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="31dp"
        android:text="Plastic"
        android:backgroundTint="#174219" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:layout_below="@id/text5"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="31dp"
        android:text="Metal"
        android:backgroundTint="#174219" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:layout_below="@id/button1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="31dp"
        android:text="Glass"
        android:backgroundTint="#174219" />
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/button4"
        android:layout_below="@id/button1"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="31dp"
        android:text="Paper"
        android:backgroundTint="#174219" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button5"
        android:layout_below="@id/button4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="31dp"
        android:text="Organic Waste"
        android:backgroundTint="#174219" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:layout_below="@id/button4"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="31dp"
        android:text="Rags"
        android:backgroundTint="#174219" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button7"
        android:layout_below="@id/button5"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="31dp"
        android:text="Syro-foam Packs"
        android:backgroundTint="#174219" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:src="@drawable/img_2" />



</RelativeLayout>